// This file is the descriptor for the Custom code recipe scatter-plot-3d
{
    // Meta data for display purposes
    "meta": {
        // label: name of the recipe as displayed, should be short
        "label": "Scatter plot 3d",
        // description: longer string to help end users understand what this recipe does
        "description": "Creates a three-dimensional scatter plot. Note that the mean z-axis value is computed for overlapping x and y values.",
        // icon: must be one of the FontAwesome 3.2.1 icons, complete list here at https://fontawesome.com/v3.2.1/icons/
        "icon": "icon-bar-chart"
    },

    "kind": "PYTHON",

    // Inputs and outputs are defined by roles. In the recipe's I/O tab, the user can associate one
    // or more dataset to each input and output role.

    "inputRoles": [
        {
            "name": "input_dataset",
            "label": "Input Dataset",
            "description": "Dataset containing data to be plotted.",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],

    "outputRoles": [
        {
            "name": "main_output",
            "label": "Output Folder",
            "description": "Managed Folder where the scatter plots will be saved.",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": false,
            "acceptsManagedFolder" : true 
        }
    ],

    /* The field "params" holds a list of all the params
       for wich the user will be prompted for values in the Settings tab of the recipe.

       The available parameter types include:
       STRING, STRINGS, INT, DOUBLE, BOOLEAN, SELECT, MULTISELECT, MAP, TEXTAREA, PRESET, COLUMN, COLUMNS

       For the full list and for more details, see the documentation: https://doc.dataiku.com/dss/latest/plugins/reference/params.html
    */

    "params": [
        {
            "name": "plot_title",
            "label": "Scatter Plot Title",
            "type": "STRING",
            "description": "Scatter plot title, will be printed over the scatter plot.",
            "mandatory": true
        },
        
        {
            "name": "x_axis",
            "label": "X Axis",
            "description": "X-Axis of the scatter plot",
            "type": "COLUMN",
            "columnRole": "input_dataset",
            "mandatory": true
        },
        {
            "name": "y_axis",
            "label": "Y Axis",
            "description": "Y-Axis of the scatter plot",
            "type": "COLUMN",
            "columnRole": "input_dataset",
            "mandatory": true
        },
        {
            "name": "z_axis",
            "label": "Z Axis",
            "description": "Z-Axis of the scatter plot",
            "type": "COLUMN",
            "columnRole": "input_dataset",
            "mandatory": true
        },
        
        {
            "name": "filter_column",
            "label": "Filter Column",
            "description": "Optional column to filter by",
            "type": "COLUMN",
            "columnRole": "input_dataset",
            "mandatory" : false
        },
        {
            "name": "filter_value",
            "label": "Filter Value",
            "description": "Value to filter by (from the filter column).",
            "type": "SELECT",
            "mandatory" : false,
            "visibilityCondition" : "model.filter_column == ''",
            "getChoicesFromPython" : true
        }
    ],

    // The field "resourceKeys" holds a list of keys that allows to limit the number
    // of concurrent executions and activities triggered by this recipe.
    //
    // Administrators can configure the limit per resource key in the Administration > Settings > Flow build
    // screen.

    "resourceKeys": []

}
